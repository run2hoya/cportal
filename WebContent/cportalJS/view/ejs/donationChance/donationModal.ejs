<!-- Modal -->
<div class="modal fade" id="donationModal" tabindex="-1" data-bs-backdrop="static" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >기부부탁증/기회권</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" >


                    <div class="card shadow-none bg-transparent border-primary">
                        <div class="card-body">
                            <h4 class="card-title text-warning"><%=title%></h4>
                            <p class="card-text"><%=des%></p>
                            <p class="card-title"><%=viewMemberName%> 님</p>
                        </div>
                    </div>



                <div class="divider divider-primary">
                    <div class="divider-text">기부하기</div>
                </div>

                <div class="mb-1 row">
                    <label for="point" class="col-sm-3 col-form-label" >최대 기부 가능</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control bookingUser" readonly="readonly" id="point">
                    </div>
                </div>

                <div class="mb-1 row">
                    <label for="givePoint" class="col-sm-3 col-form-label" >실제 기부금</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control bookingUser" readonly="readonly" id="givePoint">
                    </div>
                </div>

                <div class="mb-1 row">
                    <label for="plus" class="col-sm-3 col-form-label" >더하기</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control bookingUser" id="plus">
                    </div>
                </div>

                <div class="mb-1 row">
                    <label for="multiply" class="col-sm-3 col-form-label" >곱하기</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control bookingUser" id="multiply">
                    </div>
                </div>

                <div class="mb-1 row">
                    <label for="savePoint" class="col-sm-3 col-form-label" >적립 포인트</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control bookingUser" id="savePoint">
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button id="giveBtn" type="button" class="btn btn-primary waves-effect">완료처리</button>
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">닫기</button>
            </div>
        </div>
    </div>
</div>